<%- include("partials/header") -%>
    
    <div class="table-wrapper">
        <% if (product.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">IMAGE</th>
                        <th scope="col">NAME</th>
                        <th scope="col">STATUS</th>
                        <th scope="col">AMOUNT</th>
                        <th scope="col">PRICE</th>
                        <th scope="col">EDIT</th>
                    </tr>
                </thead>
                <tbody>
                    <% product.forEach((player, index) => { %>
                        <tr>
                            <th scope="row"><%= player.STT %></th>
                            <td><img src="/assets/img/<%= player.Image %>" class="rounded-circle player-img" alt=""></td>
                            <td><%= player.Name %></td>
                            <td><%= player.Status %></td>
                            <td><%= player.Amount %></td>
                            <td><%= player.Price %></td>                          
                            <td>
                                <a href="/edit/<%= player.STT %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= player.STT %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No product found. Go <a href="/add" >here</a> to add product.</p>
        <% } %>
    </div>
</div>
</body>
</html>
